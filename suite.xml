<?xml version="1.0" encoding="UTF-8" ?>
<suite name="mateusz-bloch-website" company="company" project="mateusz-bloch-visual-testing"
    domain="http://mateuszbloch.pl">

    <test name="FullPage" useProxy="rest">
        <collect>
            <open/>
            
            <resolution width="1920"/>
            <sleep duration="3000"/>
            <screen name="Desktop Large"/>

            <resolution width="1280"/>
            <sleep duration="3000"/>
            <screen name="Desktop Small" />

            <resolution width="768"/>
            <sleep duration="3000"/>
            <screen name="Tablet" />

            <resolution width="320"/>
            <sleep duration="3000"/>
            <screen name="Small Mobile" />

        </collect>
        <compare>
            <screen comparator="layout" percentageThreshold="1.0"/>
        </compare>
        <urls>
            <url href="/" name="FullPage"/>
        </urls>
    </test>
